.search-bar {
  width: 100%;
  height: 48px;
  position: relative;
}
.search-bar .weui-search-bar {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.search-bar .weui-search-bar .weui-search-bar__cancel-btn {
  font-size: 15px;
}
.swiper {
  width: 100%;
}
.swiper swiper-item {
  position: relative;
}
.swiper swiper-item image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
}
.swiper swiper-item .title {
  position: absolute;
  bottom: 25px;
  right: 0;
  color: #FFFFFF;
  font-size: 12px;
  line-height: 20px;
  height: 20px;
  width: 96%;
  margin: 0 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.all-event {
  width: 100%;
  margin: 10px 0;
}
.all-event .weui-cell__bd {
  font-size: 14px;
}

